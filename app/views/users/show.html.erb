<div class="row">
  <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
    <ul class="list-group">
        <li class="list-group-item"><%= link_to("My Details", "#" , id: 'user-details') %></li>
        <li class="list-group-item"><%= link_to("My Reviews", reviews_path(@user)) %></li>
        <li class="list-group-item"><%= link_to("My Venues", venues_path(@user)) %></li>
      </ul>  
  </div>
  <div class="row">
    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
      <table class="table table-hover">
            <thead>
              <tr>
                <th>Email</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= @user.email %></td><td><%= link_to("Change Email ", "#" ,type: "button", class: "btn btn-info") %></td>
              </tr>
            </tbody>
          </table>    
    </div>
  </div>
  <div class ="row">
    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>My Venues</th><th>Review Count</th><th>Edit</th>
          </tr>
        </thead>
        <tbody>
          <% @user.venues.each do |venue| %>
          <tr>
            <td><%= venue.name %></td><td><%= venue.reviews.count %></td><td><%= link_to("Manage Venue", edit_venue_path(venue) , type: "button", class: "btn btn-info") %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

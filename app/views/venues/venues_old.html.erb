<% venues.each do |venue| %>
                  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                      <div class="row">
                        <img src="#" class="img-responsive" alt="Image">  
                      </div>
                      <%= link_to "Go To Venue Details", venue_path(venue.id), class: "btn btn-info" %>
                      <button type="button" class="btn btn-primary" onClick="centerMap(<%= venue.longitude %>,<%= venue.latitude %>,handler)">Center on Venue</button>
                    </div>
                    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                      <span class="venue-title"><%= "#{index}. #{venue.name}" %></span>
                      
                    </div>
                  </div>
                <% end %>

                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 result">
                    <div class="thumbnail">
                      <img data-src="#" alt="">
                      <div class="caption">
                        <div class="row">
                          <h3 class="venue-header"><%= venue.name %></h3>
                          <% if venue.free_wifi == true %>
                            <span class="glyphicon glyphicon-check app-icon"></span>
                          <% end %>
                          <% if venue.charging == true %>
                            <span class="glyphicon glyphicon-flash app-icon"></span>
                          <% end %>
                        </div>
                        <div class="row">
                          
                          <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                            <span><h4>Website:</h4><p><%= venue.website %></p></span>
                            
                            <span><h4>Address:</h4><p><%= venue.address %></p></span>
                            
                            <p><%= venue.address_line_2 %></p>
                            <p><%= venue.postcode %></p>
                            <span><h4>Distance To:</h4></span>
                            <p><%= venue.distance_to(params[:search]).round(3) %></p>
                            
                          </div>
                        </div>
                          <%= link_to "Go To Venue Details", venue_path(venue.id), class: "btn btn-info" %>
                          <button type="button" class="btn btn-primary" onClick="centerMap(<%= venue.longitude %>,<%= venue.latitude %>,handler)">Center on Venue</button>
                      </div>
                    </div>
                  </div>
                <% end %>
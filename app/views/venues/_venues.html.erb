<% venues.each_with_index do |venue,index| %>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        <div class="row">
                          <%= image_tag('placeholder.png') %> 
                        </div>
                        <%= link_to "Venue Details", venue_path(venue.id), class: "btn btn-info" %>
                        <button type="button" class="btn btn-primary" onClick="centerMap(<%= venue.longitude %>,<%= venue.latitude %>,handler)">Center</button>
                      </div>
                      <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                        <div class="row">
                          <span class="venue-title"><h4><%= "#{index}. #{venue.name}" %></h4></span>  
                        </div>
                          <% if venue.venue_data %>
                            <div class="row">
                              <%= render 'stars', stars: venue.venue_data.rating %>                           
                            </div>
                            <div class="row">
                              <%= render 'facilities', facilities: venue %>
                            </div>
                          <% end %> 
                      </div>
                    </div>
                  <% end %>